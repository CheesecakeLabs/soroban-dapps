{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "token-a-contract": ["../../.soroban/contracts/token-a/src"],
      "token-b-contract": ["../../.soroban/contracts/token-b/src"],
      "liquidity-pool-contract": ["../../.soroban/contracts/liquidity-pool/src"],
      "share-token-contract": ["../../.soroban/contracts/share-token/src"]
      
    },
    "typeRoots": ["./node_modules/@types"],
  },
  "include": ["src/**/*"]
}
